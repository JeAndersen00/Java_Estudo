import java.util.Locale;
import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		int minutos;
		
		double valor;
		
		valor = 50.0;
		
		minutos = sc.nextInt();
		
		if (minutos > 50) {
			valor += (minutos - 100) * 2; 
		}
		
		System.out.println(valor);
		
		sc.close();
	}
}
